                </form> 
            </div>
        </div>
    </div>
    

    <script>
        function enrollCourse(courseName) {
            // Validate the course name
            if (!courseName || typeof courseName !== 'string' || courseName.trim() === '') {
                alert('Course name is missing or invalid!');
                return;
            }
    
            console.log(typeof(courseName))  // Logging the type to ensure it's a string
            console.log('Attempting to enroll in:', courseName);
    
            // Sending the POST request with the correct body structure
            axios.post('/enroll', { courseName: courseName })
                .then(response => {
                    if (response.data.success) {
                        alert('You have successfully enrolled in ' + courseName);
                       
                    } else {
                        console.error('Enrollment Error:', response.data);
                        alert('There was an error enrolling in the course: ' + (response.data.message || 'Unknown error.'));
                    }
                })
                .catch(error => {
                    console.error('Network error:', error);
                    alert('An error occurred while enrolling in the course. Please try again later.');
                });


                axios.post('/enroll_cn', { courseName: courseName })
