                    <input type="hidden" name="course_name" value="Web Development">
                    <button type="submit" class="btn">Enroll Now</button>
                     <a href="/classes-ai" class="btn">Courses</a>
                </form>
            </div>
            <div class="course-card" id="course-digitalmarketing">
